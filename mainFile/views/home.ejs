<% layout("./layouts/boilerplate.ejs") %>

<body>
    <!-- Hero Section -->
    <section class="hero">
        <div class="container text-center">
            <h1 class="display-4">Find Your Perfect Stay</h1>
            <p class="lead">Explore unique stays and book your next adventure.</p>
            <a href="/listing" class="btn btn-primary btn-lg">Browse Listings</a>
        </div>
    </section>

    <!-- Featured Listings -->
    <section class="container my-5">
        <h3 class="mb-4">Featured Listings</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% featuredList.forEach(listing => { %>
                <a href="/listing/<%= listing._id %>" class="listing-links">
                    <div class="card col">
                        <img src="<%= listing.image.url ? listing.image.url : '/images/default.avif' %>" 
                            class="card-img-top" alt="listing_image" style="height: 18rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b> <br>
                                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price Not Available" %> / night
                            </p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    </section>
</body>
