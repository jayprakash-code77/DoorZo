<% layout("./layouts/boilerplate.ejs") %>

    <body>
        <h3>All Listings</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% list.forEach(listItem=> { %>
                <a href="/listing/<%= listItem._id %>" class="listing-links">
                    <div class="card col">
                        <img src="<%= listItem.image.url != ""  ? listItem.image.url:'/images/default.avif' %>" class="card-img-top" alt="listing_images"
                            style=" height: 18rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listItem.title %>
                                </b> <br>
                                &#8377;<%= listItem.price ? listItem.price.toLocaleString("en-IN")
                                    : "Price Not Available" %> / night
                            </p>
                        </div>
                    </div>
                </a>

                <% }); %>
        </div>
    </body>