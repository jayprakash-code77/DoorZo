<% layout("./layouts/boilerplate.ejs") %>

    <body>
        <div class="edit-list-container my-5">
            <div class="card p-4  edit-form-card">
                <h3 class="text-center text-primary fw-bold">Edit Listing</h3>

                <form method="POST" action="/listing/<%= listing._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                    <!-- Title -->
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input name="listing[title]" type="text" class="form-control" value="<%= listing.title %>"
                            required>
                            <div class="invalid-feedback">
                                Enter the title
                            </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" rows="3"
                            required><%= listing.description %></textarea>
                            <div class="invalid-feedback">
                                Enter the sort description
                            </div>
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label class="form-label">Price (â‚¹)</label>
                        <input name="listing[price]" type="number" class="form-control" value="<%= listing.price %>"
                            required>
                            <div class="invalid-feedback">
                                Enter the valid price
                            </div>
                    </div>

                    <!-- Country -->
                    <div class="mb-3">
                        <label class="form-label">Country</label>
                        <input name="listing[country]" type="text" class="form-control" value="<%= listing.country %>"
                            required>
                            <div class="invalid-feedback">
                                Enter the country name
                            </div>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <input name="listing[location]" type="text" class="form-control" value="<%= listing.location %>"
                            required>
                            <div class="invalid-feedback">
                                Enter the location
                            </div>
                    </div>

                    <!-- Original Image  -->
                    <div class="mb-3">
                        <label class="form-label">Current listing image</label> <br>
                        <img src="<%= originalImageUrl %>" width="200" height="200" alt="Original_Image">
                    </div>

                    <!--New Image Upload -->
                    <div class="mb-3">
                        <label class="form-label">Upload new image</label>
                        <!-- <input name="listing[image]" type="text" class="form-control" value=""> -->
                        <input name="listing[image]" type="file" class="form-control" placeholder="Upload new image.">
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button class="btn btn-primary px-4 py-2">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>

    </body>