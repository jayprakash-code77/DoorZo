<% layout("./layouts/boilerplate.ejs") %>

<body>

  <h3 class="text-center text-primary fw-bold mt-4">User Registration</h3>

  <div class="container d-flex justify-content-center">
    <div class="new-list-container card p-4 mt-3 col-md-6 col-lg-5 col-xl-4">

      <form id="registrationForm" action="/auth/signup" method="POST" class="form-container needs-validation" novalidate>

        <div class="mb-3">
          <input name="user[fullname]" type="text" class="form-control" placeholder="Enter full name" required />
          <div class="invalid-feedback">Enter your full name</div>
        </div>

        <div class="mb-3">
          <input name="user[email]" type="email" class="form-control" placeholder="Enter email" required />
          <div class="invalid-feedback">Enter a valid email address</div>
        </div>

        <div class="mb-3">
          <input name="user[username]" type="text" class="form-control" placeholder="Enter username" required />
          <div class="invalid-feedback">Enter a username</div>
        </div>

        <div class="mb-3">
          <input id="password" name="user[password]" type="password" class="form-control" placeholder="Enter password" required />
          <div class="invalid-feedback">Enter a password</div>
        </div>

        <div class="mb-3">
          <input id="confirmPassword" name="user[confirmPassword]" type="password" class="form-control" placeholder="Confirm password" required />
          <div class="invalid-feedback" id="passwordMismatch">
            Confirm your password
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Register</button>
      </form>

      <div class="text-center mt-3">
        <small>Already have an account? <a href="/auth/login">Login</a></small>
      </div>

    </div>
  </div>

  <script>
    (function () {
      'use strict';
      const form = document.getElementById('registrationForm');
      const password = document.getElementById('password');
      const confirmPassword = document.getElementById('confirmPassword');
      const mismatchMessage = document.getElementById('passwordMismatch');

      form.addEventListener('submit', function (event) {
        // Clear previous mismatch error
        confirmPassword.setCustomValidity('');

        // Bootstrap validation
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }

        // Password match check
        if (password.value !== confirmPassword.value) {
          event.preventDefault();
          event.stopPropagation();
          confirmPassword.setCustomValidity("Passwords do not match");
          mismatchMessage.textContent = "Passwords do not match";
        }

        form.classList.add('was-validated');
      }, false);
    })();
  </script>

</body>
